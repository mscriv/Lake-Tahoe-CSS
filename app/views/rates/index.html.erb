<h1>Listing rates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Nightly</th>
      <th>Weekly</th>
      <th>Minimum stay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.date %></td>
        <td><%= rate.nightly %></td>
        <td><%= rate.weekly %></td>
        <td><%= rate.minimum_stay %></td>
        <td><%= link_to 'Show', rate %></td>
        <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rate', new_rate_path %>
